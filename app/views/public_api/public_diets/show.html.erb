<style>
body {
  background: radial-gradient(circle at 0% 0.5%, rgb(241, 241, 242) 0.1%, rgb(224, 226, 228) 100.2%);
}
h1 {
  color: #D2691E;
  font-family: Gill Sans, sans-serif;
  margin-top: 1rem;
  padding-bottom: 0.1rem;
  text-align: center;
}
h4 {
  color: #008B8B;
  font-family: Gill Sans, sans-serif;
  margin-top: 1rem;
  padding-bottom: 0.1rem;
  text-align: center;
}
.all{
  color: #008B8B;
  font-family: Gill Sans, sans-serif;
  margin-top: 1rem;
  padding-bottom: 0.1rem;
  text-align: center;
}
.nutrients {
  color: #556B2F;
}
.button {
	background-color:#D2691E;
	border-radius:28px;
	border:1px solid #18ab29;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-family:Arial;
	font-size:17px;
	padding:16px 31px;
	text-decoration:none;
	text-shadow:0px 1px 0px #2f6627;
  margin: auto;
  display: block;
  text-align: center;
  width: 180px;
}
.button:hover {
	background-color:#008B8B;
}
p{
  color: #D2691E;
  font-family: Gill Sans, sans-serif;
  margin-top: 1rem;
  padding-bottom: 0.1rem;
  text-align: center;
}
</style>

<h1><%=@diet.name %></h1>
    <h4>Description: <%= @diet.description %></h4>
    <h4 class="all">Components: <%= @diet.components %></h4>
  <h4>total_calories: <%= @diet.total_calories %></h4>
  <p class="nutrients"><b>Nutrients:</b></p>
  <% @diet.nutrients.except('name').each do |key, v| %>
    <p><%= key.humanize %>: <%= v.truncate(2).to_s %></p>
  <% end %>
  <%= link_to "Back to Homepage", root_path, class:"button" %>
